<html>
  <head>
      <title>nodejs</title>
   </head>
   <style>
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
    }
    </style>
  <body>

    <h1>List Products!</h1>
    
    <table style="width:100%;">
      <tr>
        <td>No</td>
        <td>Nama</td>
        <td>Kode</td>
      </tr>

      <% 
        var no = 1; 
        posts.forEach(function(el){ 
      %>
      <tr>
        <td><%= no++ %></td>
        <td><%= el.name %></td>
        <td><%= el.code %></td>
      </tr>
      <% }) %>

    </table>

  </body>
</html>